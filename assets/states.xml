        <TEXTURES>
            <texture filename="assets/button.png" ID="playbutton"/>
            <texture filename="assets/exit.png" ID="exitbutton"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="MenuButton" x="100" y="100" width="400" height="100" textureID="playbutton" numFrames="0" callbackID="0"/>
            <object type="MenuButton" x="100" y="300" width="400" height="100" textureID="exitbutton" numFrames="0" callbackID="1"/>
        </OBJECTS>
